<p id="notice"><%= notice %></p>

<h1>Listing Table States</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @table_states.each do |table_state| %>
      <tr>
        <td><%= table_state.name %></td>
        <td><%= link_to 'Show', table_state %></td>
        <td><%= link_to 'Edit', edit_table_state_path(table_state) %></td>
        <td><%= link_to 'Destroy', table_state, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

